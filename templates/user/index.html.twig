{% block body %}
    <div class="container mt-5">
        <h1>User index</h1>


        <table class="table mt-4" id="tableac">
            <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Date_N</th>
                <th>Role</th>
                <th>Status</th>
                <th>Num_tel</th>
                <th>Actions</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.dateN ? user.dateN|date('Y-m-d') : '' }}</td>
                    <td>{{ user.role }}</td>
                    <td>{{ user.getStatus() }}</td>
                    <td>{{ user.num_tel }}</td>

                    <td>
                        <a href="{{ path('user_inactive',{'idActive': user.getId()}) }}">
                            <i class="fa fa-check"></i> Activate
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('app_user_back_show', {'id': user.id}) }}">Show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <script>
            $(document).ready(function(){
                $('#search').keyup(function(){
                    search_table($(this).val());
                });

                function search_table(value){
                    $('#tableac tbody tr').each(function(){
                        var found = false;
                        $(this).find('td:first-child').each(function(){
                            if($(this).text().toLowerCase().includes(value.toLowerCase())){
                                found = true;
                                return false;
                            }
                        });
                        if(found){
                            $(this).show();
                        } else {
                            $(this).hide();
                        }
                    });
                }
            });
        </script>

        <nav aria-label="Page navigation" class="mt-4">
            {% if pagerfanta.haveToPaginate() %}
                <ul class="pagination justify-content-center">
                    {% for page in range(1, pagerfanta.getNbPages()) %}
                        <li class="page-item{% if pagerfanta.getCurrentPage() == page %} active{% endif %}">
                            <a class="page-link" href="{{ path('app_user_index',{'id': app.user.getId(),'page': page}) }}">{{ page }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </nav>

    </div>
{% endblock %}
