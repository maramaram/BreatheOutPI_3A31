{% extends '/user/HomeOnclient.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block up%}
    <section class="slider">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <br>
                    <span class="h6 d-inline-block mb-4 subhead text-uppercase">Home Page</span>
                    <h1 class="text-uppercase text-white mb-5">Hello<span class="text-color"><br>{{ app.user.getPrenom() }} </span><br>To your Home Page</h1>

                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block body %}
    <div class="container mt-5">
        <h1>Edit User</h1>

        <form method="post" action="{{ path('app_user_edit', {'id': user.id}) }}" enctype="multipart/form-data">
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.prenom, 'Prenom', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.adress, 'Adress', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.adress, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.photo, 'Image', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.photo, {'attr': {'class': 'form-control-file'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.num_tel, 'Phone number', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.num_tel, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button type="submit" class="btn btn-primary mt-3">Save Changes</button>

            {{ form_end(form) }}
        </form>

        <a href="{{ path('app_user_show', {'id': app.user.getId()}) }}" class="btn btn-secondary mt-3">Cancel</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}

