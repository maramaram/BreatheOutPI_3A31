{% block body %}
    <div class="container mt-5">
        <h1>User Details</h1>

        <table class="table table-bordered mt-4">
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>PHOTO</th>
                <td>
                    {% if user.photo %}
                        <img src="{{ asset('/' ~ user.photo) }}" alt="User Photo" class="img-fluid">
                    {% else %}
                        No photo available
                    {% endif %}
                </td>
            </tr>

            <tr>
                <th>Date of Birth</th>
                <td>{{ user.dateN ? user.dateN|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_user_edit', {'id': app.user.getId()}) }}" class="btn btn-primary mt-3">Edit</a>
        <a href="{{ path('app_logout') }}" class="btn btn-danger mt-3">Logout</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}


