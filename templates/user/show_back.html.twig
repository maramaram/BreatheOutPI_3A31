{% extends 'baseback.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>User Details</h1>

        <table class="table mt-4">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Pwd</th>
                <td>{{ user.pwd }}</td>
            </tr>
            <tr>
                <th>Date_N</th>
                <td>{{ user.dateN ? user.dateN|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_user_index', {'id': app.user.getId()}) }}" class="btn btn-primary">Back to List</a>

        {{ include('user/delete_back.html.twig') }}
    </div>
{% endblock %}
