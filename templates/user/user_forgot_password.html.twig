{% extends 'basefront.html.twig' %}



{% block up%}


    <section class="slider">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <span class="h6 d-inline-block mb-4 subhead text-uppercase">Create account</span>
                    <h1 class="text-uppercase text-white mb-5">Welcome On Our <span class="text-color">fitness </span><br>Website</h1>

                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block body %}
    {% for message in app.flashes('error') %}

        <div class="alert alert-danger">
            {{ message }}
        </div>

    {% endfor %}
    <body id="body">
    <div class="hero-slider">
        <div class="slider-item th-fullpage hero-area d-flex align-items-center justify-content-center" style="background-image: url({{ asset('front/images/slider/envi.jpg')}});" style="height: 100vh;">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-body">
                            <h1 class="text-black-50"> WRITE YOUR NUMBER </h1>
                            <div class="form-container">
                                {{ form_start(form,{'attr':{'novalidate':'novalidate', 'class': 'text-white','class': 'text-danger'}}) }}

                                {{ form_widget(form) }}
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}