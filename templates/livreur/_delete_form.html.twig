<form method="post" action="{{ path('app_livreur_delete', {'id': livreur.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce Livreur ?')">
   <input type="hidden" name="_method" value="DELETE" />
   <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livreur.id) }}" />
   <button type="submit" class="btn btn-danger">Supprimer</button>
</form>