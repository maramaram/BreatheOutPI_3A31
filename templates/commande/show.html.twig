{% extends 'baseback.html.twig' %}

{% block title %}Détails de la Commande{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h4>Informations sur la Commande</h4>
                        </div>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ commande.id }}</td>
                                </tr>
                                <tr>
                                    <th>Statut</th>
                                    <td>{{ commande.statut }}</td>
                                </tr>
                                <tr>
                                    <th>Prix Total du Panier</th>
                                    <td>{{ commande.panier.getPrixTot() }}</td>
                                </tr>
                                <tr>
                                    <th>Adress du Client</th>
                                    <td>{{ commande.panier.getClient().getAdress() }}</td>
                                </tr>
                                <tr>
                                    <th>ID du livreur</th>
                                    <td>{{ commande.livreur.getId() }}</td>
                                </tr>
                                
                                <!-- Ajoutez d'autres lignes en fonction des champs de votre entité Commande -->
                            </tbody>
                        </table>
                        <div class="button-container">
                            <a href="{{ path('app_commande_index') }}" class="btn btn-dark">Retour à la liste</a>
                            <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-dark">Modifier</a>
                            {{ include('commande/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
