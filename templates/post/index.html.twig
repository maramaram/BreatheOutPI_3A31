    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


    <style>
        #most-viewed-chart {
            max-width: 400px;
            margin: 0 auto;
        }
    </style>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Most Daily Viewed Post</h4>
                <canvas id="most-viewed-chart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('most-viewed-chart').getContext('2d');

            // Parse the JSON-encoded data
            var mostViewedPosts = JSON.parse('{{ mostViewedPosts|json_encode|raw }}');

            var data = {
                labels: mostViewedPosts.map(post => post.publishDay),
                datasets: [{
                    label: 'Views',
                    data: mostViewedPosts.map(post => post.views),
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            };

            var options = {
                scales: {
                    x: {
                        type: 'time',
                        time: {
                            unit: 'day',
                            tooltipFormat: 'll'
                        },
                        title: {
                            display: true,
                            text: 'Publish Day'
                        }
                    },
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Views'
                        }
                    }
                }
            };

            var myChart = new Chart(ctx, {
                type: 'line',
                data: data,
                options: options
            });
        });
    </script>




